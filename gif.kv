<RootWidget>:
	
	Button:
		id: open_popup
		size_hint: None, None
		size: 110, 100
		pos_hint: {'center_x': .5, 'center_y': .5}
		on_release: root.select_folder()
		Image:
			source: 'img/open_main.png'
			x: self.parent.x + 5
			y: self.parent.y + 3
			allow_stretch: True
			size_hint: None,None
			size: 100,100
	
			
			
